# # Django Settings
# ADMIN_SECRET_KEY=generate-a-secure-key-here
# CUSTOMER_SECRET_KEY=generate-a-different-secure-key-here
# DEBUG=True

# # Allowed Hosts (comma separated, no spaces)
# ADMIN_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
# CUSTOMER_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Railway Environment
RAILWAY_ENVIRONMENT=production
RAILWAY_STATIC_URL=your-app-name.railway.app

# Database Configuration (Railway will provide DATABASE_URL)
# POSTGRES_DB=dycetix_db
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your_password_here
# POSTGRES_HOST=postgres
# POSTGRES_PORT=5432

# Django Settings
ADMIN_SECRET_KEY=generate-a-secure-key-here-minimum-50-characters
CUSTOMER_SECRET_KEY=generate-a-different-secure-key-here-minimum-50-characters
DEBUG=False

# Allowed Hosts
ADMIN_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,your-app-name.railway.app
CUSTOMER_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,your-app-name.railway.app

# CORS Settings
CORS_ALLOWED_ORIGINS=https://your-app-name.railway.app,http://localhost:8001

# Email Settings (Optional for production)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=noreply@dycetix.com

# Security
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True